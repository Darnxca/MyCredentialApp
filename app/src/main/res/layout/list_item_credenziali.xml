<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:focusable="true"
    android:padding="8dp"
    android:layout_marginBottom="2dp"
    android:clickable="true"
    android:id="@+id/elementoPadre"
    android:background="@drawable/item_recycler_pressed_selector">

    <TextView
        android:id="@+id/id"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text=""/>

    <TextView
        android:id="@+id/nome_servizio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/servizio"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="18sp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="2dp"
        />

    <TextView
        android:id="@+id/username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/username"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:paddingTop="1sp"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@id/nome_servizio"/>

    <TextView
        android:id="@+id/password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/password"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="18sp"
        android:layout_below="@id/nome_servizio"
        android:layout_marginEnd="2dp"/>

    <TextView
        android:id="@+id/val_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/pass"
        android:textSize="16sp"
        android:inputType="textPassword"
        android:textColor="@color/white"
        android:paddingTop="3sp"
        android:layout_below="@id/nome_servizio"
        android:layout_toEndOf="@id/password"
        tools:ignore="TextViewEdits" />

    <ImageView
        android:id="@+id/showPasswordIcon"
        android:layout_width="20dp"
        android:layout_height="wrap_content"
        android:importantForAccessibility="no"
        android:src="@drawable/baseline_visibility_off_24"
        android:layout_below="@id/nome_servizio"
       android:layout_alignParentEnd="true"/>

</RelativeLayout>
